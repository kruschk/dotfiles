############################################################################
# Symbol bindings
############################################################################
# Used to refresh the status bar
set $refresh_i3status killall -SIGUSR1 i3status
# Use ALSA mixer to adjust the volume with the dedicated keyboard keys
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer sset Master 3dB+ \
                                                      && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id amixer sset Master 3dB- \
                                                      && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id amixer sset Master toggle \
                                                      && $refresh_i3status
#bindsym XF86AudioMicMute exec --no-startup-id amixer sset Microphone toggle
#                                                      && $refresh_i3status
# Use a custom script to adjust the backlight brightness
bindsym XF86MonBrightnessUp exec --no-startup-id brighten.sh
bindsym XF86MonBrightnessDown exec --no-startup-id dim.sh
# Start a terminal (--no-startup-id is to prevent the cursor from spinning
# after opening a terminal)
bindsym $mod+Return exec --no-startup-id i3-sensible-terminal
# Kill the focused window
bindsym $mod+Shift+q kill
# Start the dmenu program launcher
bindsym $mod+x exec --no-startup-id dmenu_run
# Change focus using vi-like controls...
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
# or, use the arrow keys
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
# Move the focused window using vi-like controls...
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
# or, the arrow keys
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right
# Enable horizontal splitting
#bindsym $mod+b split h
# Enable vertical splitting
#bindsym $mod+v split v
# Toggle splitting mode
bindsym $mod+v split toggle
# Activate fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle
# Change the container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
# Toggle the focused window between tiling/floating mode
bindsym $mod+Shift+space floating toggle
# Toggle focus between tiling/floating windows
bindsym $mod+space focus mode_toggle
# Focus the current container's/window's parent container
bindsym $mod+a focus parent
# Focus the current container's/window's child container
bindsym $mod+d focus child
# Toggle between dock mode and hide mode
bindsym $mod+m bar mode toggle
# Switch to last workspace (similar to Alt+Tab)
bindsym $mod+Tab workspace back_and_forth
# Switch to a given workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10
# Move the focused container to a given workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10
# Reload the configuration file
bindsym $mod+Shift+c reload
# Restart i3 in-place (preserves the current layout and session; can be used
# to upgrade i3)
bindsym $mod+Shift+r restart
# Exit i3 (logs out of the current X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning \
                                     -m 'Do you really want to exit i3?' \
                                     -B 'Yes, exit i3' 'i3-msg exit'"
bindsym $mod+u [tiling workspace="__focused__"] move workspace "reorder"; \
               [workspace="reorder"] move workspace current

############################################################################
# Binding modes
############################################################################
# A mode for resizing windows (using the mouse works too)
set $resize_mode resize
mode "$resize_mode" {
    # These bindings trigger upon switching to resize mode

    # Pressing left will shrink the window’s width.
    # Pressing right will grow the window’s width.
    # Pressing up will shrink the window’s height.
    # Pressing down will grow the window’s height.
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt

    # same bindings, but for the arrow keys
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt

    # back to normal: Enter or Escape or $mod+r
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}
bindsym $mod+r mode "$resize_mode"

# A mode for locking, suspending, powering off, etc
set $system_mode system: [e]xit i3 [l]ock [p]oweroff [r]eboot [s]uspend
set $lock_display i3lock -i ~/.local/share/i3/geolanes-1366x768.png \
                         --color=000000
mode "$system_mode" {
    # These bindings trigger upon entering system mode
    bindsym e exec --no-startup-id i3-msg exit
    bindsym l exec --no-startup-id $lock_display; \
              mode "default"
    bindsym p exec --no-startup-id systemctl poweroff
    bindsym r exec --no-startup-id systemctl reboot
    bindsym s exec --no-startup-id $lock_display && systemctl suspend; \
              mode "default"

    # Back to normal: Enter, Escape, or $mod+r
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+Shift+p mode "default"
}
bindsym $mod+Shift+p mode "$system_mode"

############################################################################
# Workspace bar
############################################################################
# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    #mode hide
    status_command i3status
}

############################################################################
# Miscellaneous
############################################################################
# Remove borders (but keep title bars)
default_border normal 0
# Use Mouse+$mod to drag floating windows to their desired positions
floating_modifier $mod
# Don't Pac-Man-wrap
focus_wrapping no
